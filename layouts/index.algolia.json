{{- $index := slice -}}
{{- range $page := $.Site.RegularPages -}}
    {{- $page := . -}}
    {{- $chucked := slice -}}
    {{ range $i : (seq 0 1000 $post_len) -}}
        {{- $chunked = $chunked | append (delimit (first 1000 (after $i $page.PlainWords) ) " ") -}}
    {{- end -}}

    {{- range $i, $c := $chunked -}}
        {{- $index = $index | append (dict "objectID" (print $page.File.UniqueID "_" $i) "content" $c "order" $i "title" $page.Title "date" $page.Date "href" $page.Permalink "summary" $page.Summary "tags" $page.Params.tags ) -}}
    {{- end -}}
{{- end -}}
{{- $index | jsonify -}}
